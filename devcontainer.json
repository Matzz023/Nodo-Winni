{
  "name": "Ubuntu Server 24.04",
  "build": {
    "dockerfile": "../Dockerfile"
  },
  "postCreateCommand": "apt update && apt upgrade -y && apt install -y curl wget git nano", // Instala herramientas básicas
  "customizations": {
    "vscode": {
      "extensions": ["ms-vscode-remote.remote-containers"] // Extensiones útiles para VS Code
    }
  },
  "remoteUser": "root" // Usa root para permisos completos (cuidado con seguridad)
}
